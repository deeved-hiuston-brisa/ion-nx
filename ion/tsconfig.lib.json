{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["jest", "node", "@testing-library/jest-dom"]
  },
  "exclude": [
    "src/**/*.spec.ts",
    "test-setup.ts",
    "jest.config.ts",
    "src/**/*.test.ts"
  ],
  "include": ["src/**/*.ts", "test-setup.ts", "**/*.ts"]
}
