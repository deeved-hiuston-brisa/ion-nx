{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@brisanet/ion": ["ion/components/index.ts"],
      "@brisanet/ion/components": ["ion/components/index.ts"],
      "@brisanet/ion/components/alert": ["ion/components/alert/index.ts"],
      "@brisanet/ion/components/badge": ["ion/components/badge/index.ts"],
      "@brisanet/ion/components/icon": ["ion/components/icon/index.ts"],
      "@brisanet/ion/components/checkbox": ["ion/components/checkbox/index.ts"],
      "@brisanet/ion/components/core/types": [
        "ion/components/core/types/index.ts"
      ],
      "@brisanet/ion/components/breadcrumb": [
        "ion/components/breadcrumb/index.ts"
      ],
      "@brisanet/ion/utils": ["ion/utils/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
